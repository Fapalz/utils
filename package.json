{
  "name": "@fapalz/utils",
  "version": "1.0.1",
  "description": "Base utils",
  "main": "./package/index.js",
  "module": "./src/index.js",
  "scss": "package/assets/index.scss",
  "css": "package/index.css",
  "scripts": {
    "prettier": "prettier \"**/*.+(js|scss|css)\" --ignore-path ./.prettierignore --write",
    "lint": "eslint src/**/*.{js,ts}",
    "build:dev": "cross-env NODE_ENV=development node ./scripts/build",
    "build:prod": "cross-env NODE_ENV=production node ./scripts/build",
    "build": "npm run build:clean && npm run build:lib",
    "watch": "cross-env NODE_ENV=development node scripts/watch",
    "serve": "npm run build:dev && concurrently --kill-others \"vite ./playground\" \"npm run watch\" "
  },
  "author": "Gladikov Kirill - Fapalz <blacesmot@gmail.com>",
  "bugs": {
    "url": "https://github.com/Fapalz/utils/issues"
  },
  "homepage": "https://github.com/Fapalz/utils#readme",
  "lint-staged": {
    "*.{scss, css}": "stylelint",
    "*.{js, ts}": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-decorators": "^7.12.13",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.2",
    "html-webpack-plugin": "^5.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rollup": "^2.39.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.8",
    "stylelint": "^13.10.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.19.0",
    "terser": "^5.6.0",
    "vite": "^2.0.2"
  },
  "dependencies": {}
}
